<% layout('layouts/layout') %>

<h1>Add New Classification</h1>

<p>Classification names must not contain spaces or special characters.</p>

<% if (errors && errors.length > 0) { %>
  <div class="error-messages">
    <ul>
      <% errors.forEach(function(error) { %>
        <li><%= error.msg %></li>
      <% }) %>
    </ul>
  </div>
<% } %>

<form action="/inv/add-classification" method="post">
  <label for="classification_name">Classification Name</label><br>
  <input type="text" id="classification_name" name="classification_name"
         pattern="^[A-Za-z0-9]+$" required
         value="<%= typeof classification_name !== 'undefined' ? classification_name : '' %>">
  <br><br>
  
  <button type="submit">Add Classification</button>
</form>
