<%- include('../partials/header', { title: title, nav: nav }) %>

<main>
  <h1><%= title %></h1>

  <section class="vehicle-detail-wrapper">
    <!-- Inject the vehicle HTML generated by utilities.buildVehicleDetail() -->
    <%- vehicleHtml %>
  </section>
</main>

<%- include('../partials/footer') %>

<style>
  /* Responsive vehicle detail styles */
  .vehicle-detail-wrapper {
    max-width: 1000px;
    margin: 0 auto;
    padding: 1rem;
  }

  .vehicle-detail-container {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
  }

  .vehicle-detail-container img {
    flex: 1 1 300px;
    max-width: 100%;
    height: auto;
    border-radius: 8px;
  }

  .vehicle-info {
    flex: 1 1 400px;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  .vehicle-info h2 {
    margin-bottom: 0.5rem;
  }

  .vehicle-info p {
    margin: 0.25rem 0;
    font-size: 1.1rem;
  }

  @media (max-width: 600px) {
    .vehicle-detail-container {
      flex-direction: column;
      align-items: center;
    }

    .vehicle-info {
      text-align: center;
    }
  }
</style>
