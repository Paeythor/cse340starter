<%- include('../partials/header', { title: title, nav: nav }) %>

<main>
  <h1><%= title %></h1>

  <section class="vehicle-detail-wrapper">
    <div class="vehicle-detail-container">
      <img src="<%= vehicle.imgPath %>" alt="<%= vehicle.inv_year %> <%= vehicle.inv_make %> <%= vehicle.inv_model %>">
      
      <div class="vehicle-info">
        <h2><%= vehicle.inv_year %> <%= vehicle.inv_make %> <%= vehicle.inv_model %> <%= vehicle.inv_trim || '' %></h2>
        <p><strong>Price:</strong> $<%= vehicle.inv_price.toLocaleString() %></p>
        <p><strong>Mileage:</strong> <%= vehicle.inv_miles.toLocaleString() %> mi</p>
        <p><strong>MPG:</strong> <%= vehicle.inv_mpg_city %>/<%= vehicle.inv_mpg_highway %> (City/Hwy)</p>
        <p><strong>Drivetrain:</strong> <%= vehicle.inv_drive || 'Unknown' %></p>
        <p><strong>Transmission:</strong> <%= vehicle.inv_transmission || 'Unknown' %></p>
        <p><strong>Fuel Type:</strong> <%= vehicle.inv_fuel || 'Unknown' %></p>
        <p><strong>Exterior Color:</strong> <%= vehicle.inv_exterior_color || 'Unknown' %></p>
        <p><strong>Interior Color:</strong> <%= vehicle.inv_interior_color || 'Unknown' %></p>
        <p><strong>VIN:</strong> <%= vehicle.inv_vin || 'N/A' %></p>
        <p><strong>Stock #:</strong> <%= vehicle.inv_stock || 'N/A' %></p>

        <div class="cta-buttons">
          <a href="/contact" class="btn">Contact Us</a>
          <a href="/schedule-test-drive" class="btn">Schedule Test Drive</a>
          <a href="/apply-financing" class="btn">Apply for Financing</a>
        </div>

        <p class="disclaimer">* The principal prior use of this vehicle was as a Rental Vehicle.</p>
      </div>
    </div>
  </section>
</main>

<%- include('../partials/footer') %>

<style>
  .vehicle-detail-wrapper {
    max-width: 1000px;
    margin: 0 auto;
    padding: 1rem;
  }

  .vehicle-detail-container {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
  }

  .vehicle-detail-container img {
    flex: 1 1 300px;
    max-width: 100%;
    height: auto;
    border-radius: 8px;
  }

  .vehicle-info {
    flex: 1 1 400px;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  .vehicle-info h2 {
    margin-bottom: 0.5rem;
  }

  .vehicle-info p {
    margin: 0.25rem 0;
    font-size: 1.1rem;
  }

  .cta-buttons {
    margin-top: 1rem;
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .cta-buttons .btn {
    background-color: #00704a;
    color: #fff;
    padding: 0.5rem 1rem;
    text-decoration: none;
    border-radius: 5px;
    transition: background-color 0.3s ease;
  }

  .cta-buttons .btn:hover {
    background-color: #004f34;
  }

  .disclaimer {
    margin-top: 1rem;
    font-size: 0.9rem;
    color: #666;
  }

  @media (max-width: 600px) {
    .vehicle-detail-container {
      flex-direction: column;
      align-items: center;
    }

    .vehicle-info {
      text-align: center;
    }
  }
</style>
