<%- include('../partials/head') %>
<%- include('../partials/header') %>
<%- include('../partials/nav') %>

<main>
  <h1>Add Vehicle</h1>
  <form id="addVehicleForm" action="/inventory/add" method="POST">
    <label for="make">Make:</label>
    <input type="text" id="make" name="make" required>

    <label for="model">Model:</label>
    <input type="text" id="model" name="model" required>

    <label for="year">Year:</label>
    <input type="number" id="year" name="year" min="1886" required>

    <label for="price">Price:</label>
    <input type="number" id="price" name="price" min="0" required>

    <label for="color">Color:</label>
    <input type="text" id="color" name="color" required>

    <label for="classification">Classification:</label>
    <select id="classification" name="classification_id" required>
      <option value="">Choose a classification</option>
      <% classificationList.forEach(c => { %>
        <option value="<%= c.classification_id %>"><%= c.classification_name %></option>
      <% }) %>
    </select>

    <button type="submit">Add Vehicle</button>
  </form>
</main>

<%- include('../partials/footer') %>
<script src="/js/form-validation.js"></script>
